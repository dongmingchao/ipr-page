		position: relative;

		.left {
			position: absolute;
			top: 0px;
			left: 0px;
			width: 0px;
			height: 0px;
			border-top: 13px solid transparent;
			border-bottom: 13px solid transparent;
			border-right: 13px solid #0077b9;
		}

		.right {
			position: absolute;
			top: 0px;
			right: 0px;
			width: 0px;
			height: 0px;
			border-top: 13px solid transparent;
			border-bottom: 13px solid transparent;
			border-left: 13px solid #0077b9;
		}
	}
