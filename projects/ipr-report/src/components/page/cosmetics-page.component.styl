.c-step .circle {
	width: 100%;
	display: block;
	margin: auto;
	z-index: 21;
	position: relative;
}

.c-step .topLine {
	width: 100%;
	height: 50%;
	display: block;
}

.c-step .botLine {
	width: 100%;
	height: 50%;
	display: block;
	margin-top: -3px;
}

.c-step .circle div {
	background-color: white;
	border: 3px solid #acacac;
	border-radius: 100%;
	width: 20px; /* +6 for border */
	height: 20px;
	margin: auto;
}

.c-step.active .circle div {
	background-color: #0077b9;
	border: 3px solid #0077b9;
	border-radius: 100%;
	width: 20px; /* +6 for border */
	height: 20px;
	margin: auto;
}

.c-step .circle div:hover {
	background-color: #0077b9;
	border: 3px solid #0077b9;
	border-radius: 100%;
	width: 20px; /* +6 for border */
	height: 20px;
	margin: auto;
}

.topLine div, .botLine div {
	width: 12px;
	height: 110%;
	margin: auto;
	background: #e6e7e8;
	border-left: solid 3.5px #acacac;
	border-right: solid 3.5px #acacac;
}

.c-step.active .topLine div, .c-step.active .botLine div {
	width: 12px;
	height: 110%;
	margin: auto;
	background: #0077b9;
	border-left: solid 3.5px #acacac;
	border-right: solid 3.5px #acacac;
}

.c-step.currentActive .topLine div {
